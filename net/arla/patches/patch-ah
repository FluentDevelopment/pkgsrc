+INSTALL_LKMD   = ${INSTALL_PROGRAM:C/-s//}
 INSTALL_DATA	= @INSTALL_DATA@
 MKINSTALLDIRS 	= @top_srcdir@/mkinstalldirs
 
@@ -28,7 +29,7 @@
 libdir 		= @libdir@
 libexecdir 	= @libexecdir@
 bindir 		= @bindir@
-lkmdir 		= @bindir@
+lkmdir		= $(exec_prefix)/lkm
 transform	= @program_transform_name@
 EXECSUFFIX	= @EXECSUFFIX@
 VARDB		= /var/db
@@ -136,7 +137,7 @@
 install-bsd:
 	$(MKINSTALLDIRS) $(DESTDIR)$(lkmdir)
 	LKM_BIN='$(NNPFS_BIN)'; for x in $$LKM_BIN; do \
-		$(INSTALL_PROGRAM) $$x $(DESTDIR)$(lkmdir)/$$x; \
+		$(INSTALL_LKMD) $$x $(DESTDIR)$(lkmdir)/$$x; \
 	done
 
 install: all $(INSTALL_LKM)
