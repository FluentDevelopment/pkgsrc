+					/* interpolate full name */
+					snprintf(bp, GECOS_BUFLEN - (bp - buf),
+						 "%s", pwd->pw_name);
+					*bp = toupper(*bp);
+					bp += strlen(bp);
+				} else {
+					*bp++ = *p;
+				}
+			}
+			*bp = '\0';
