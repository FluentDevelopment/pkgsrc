+        lwz 7, 28(1) \
+        addic 1, 1, 32
+
+#define PROFILE_C \
+        mflr 0 \
+        stw 0, 4(1) \
+        bl _mcount
+#else
+#define PROFILE_CAML
+#define PROFILE_C
+#endif
