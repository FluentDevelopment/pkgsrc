# $NetBSD: INSTALL,v 1.2 2007/01/28 15:15:58 taca Exp $

DATE="@DATE@"
PREFIX="@PREFIX@"
RUBY_SITERIDIR="${PREFIX}/@RUBY_SITERIDIR@"
RUBY_SYSRIDIR="${PREFIX}/@RUBY_SYSRIDIR@"
rid="${RUBY_SITERIDIR}/created.rid"

case ${STAGE} in
POST-INSTALL)
	if [ -d ${RUBY_SYSRIDIR} ]; then
		${DATE} > ${rid}
	fi
	;;
esac
exit
