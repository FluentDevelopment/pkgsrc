.if defined(BUILDLINK_DEPMETHOD.python)
BUILDLINK_DEPMETHOD.python22-pth?=	${BUILDLINK_DEPMETHOD.python}
.endif

BUILDLINK_INCDIRS.python22-pth+=	include/python2p2
