# on IRIX 5.3 inttypes.h and sys/types.h are known to conflict.
CONFIGURE_ENV+=	ac_cv_header_inttypes_h="no"
.endif

DISTINFO_FILE=	${.CURDIR}/../../lang/tcl-expect/distinfo
PATCHDIR=	${.CURDIR}/../../lang/tcl-expect/patches
