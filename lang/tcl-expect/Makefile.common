DISTNAME=	expect-${EXPECT_VERSION}
MASTER_SITES=	http://expect.nist.gov/src/
HOMEPAGE=	http://expect.nist.gov/

EXPECT_VERSION=	5.42.1

WRKSRC=		${WRKDIR}/expect-5.42
USE_BUILDLINK3=	yes
USE_LIBTOOL=	yes
GNU_CONFIGURE=	yes
TEST_TARGET=	test

.include "../../mk/bsd.prefs.mk"
