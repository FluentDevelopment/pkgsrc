 static void sdl_hide_cursor(void)
 {
+	if (kbd_mouse_is_absolute()) {
+		SDL_ShowCursor(1);
     SDL_SetCursor(sdl_cursor_hidden);
+	} else
+		SDL_ShowCursor(0);
 }
 
 static void sdl_show_cursor(void)
 {
-    if (!kbd_mouse_is_absolute()) {
-	SDL_SetCursor(sdl_cursor_normal);
-    }
+    if (!kbd_mouse_is_absolute())
+	    SDL_ShowCursor(1);
 }
 
