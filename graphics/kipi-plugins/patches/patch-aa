 #include "exiv2iface.h"
 
+#ifndef trunc
+#  if defined(__DragonFly__) || defined(__NetBSD__)
+static double trunc(double val)
+{
+	if (val > 0)
+		return floor(val);
+	else
+		return ceil(val);
+}
+#  endif
+#endif
