# $NetBSD: DEINSTALL,v 1.2 2004/05/27 04:45:06 jlam Exp $

IMAPDCONF=@IMAPDCONF@

case ${STAGE} in
DEINSTALL)
	if [ -f ${IMAPDCONF} ]; then
		${AWK} '/configdirectory:/      { print $2 };		\
			/partition-.*:/         { print $2 };		\
			/sievedir:/             { print $2 }'		\
			${IMAPDCONF} |					\
		while read dir; do
			if [ -d "${dir}" ]; then
				ALL_DIRS="${ALL_DIRS} ${dir}"
			fi
		done
	fi
	;;
esac
