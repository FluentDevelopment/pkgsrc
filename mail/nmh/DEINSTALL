#!/bin/sh
#
# $NetBSD: DEINSTALL,v 1.2 2003/08/30 20:22:57 jlam Exp $

PKGNAME=$1
STAGE=$2

case ${STAGE} in
POST-DEINSTALL)
	CONFDIR=${PKG_PREFIX}/etc/nmh

	cat << EOF
===========================================================================
If you won't be using ${PKGNAME} any longer, you may want to remove the
following directories:

	${CONFDIR}
===========================================================================
EOF
	;;
esac
exit 0
