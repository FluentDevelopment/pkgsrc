#!/bin/sh
# $NetBSD: INSTALL.nspluginwrapper,v 1.1 2007/03/23 18:59:41 abs Exp $

case $STAGE in
    POST-INSTALL)
	nspluginwrapper -i @PREFIX@/lib/netscape/plugins/libflashplayer.so
	;;
esac


case $STAGE in
    DEINSTALL)
	for wrapped in `nspluginwrapper -l | grep ^/` ; do
	    nspluginwrapper -r $wrapped
	done
	;;
esac

