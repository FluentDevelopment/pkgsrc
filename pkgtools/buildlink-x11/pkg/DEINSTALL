#!/bin/sh
#
# $NetBSD: DEINSTALL,v 1.2 2001/07/13 07:09:21 jlam Exp $

PKGNAME=$1
STAGE=$2

CMP="@CMP@"
CP="@CP@"
GREP="@GREP@"
RM="@RM@"
RMDIR="@RMDIR@"
TRUE="@TRUE@"

X11BASE=@X11BASE@
X11_HOSTDEF=${X11BASE}/lib/X11/config/host.def
HOSTDEF=${PKG_PREFIX}/lib/X11/config/host.def

case ${STAGE} in
DEINSTALL)
	;;

POST-DEINSTALL)
	echo -n "Updating ${HOSTDEF}..."
	${CP} -f ${HOSTDEF} ${HOSTDEF}.bak
	( ${GREP} -v buildlinkX11 ${HOSTDEF}.bak || ${TRUE} ) > ${HOSTDEF}
	${RM} -f ${HOSTDEF}.bak
	if [ ${PKG_PREFIX} != ${X11BASE} ] && \
		${CMP} -s ${X11_HOSTDEF} ${HOSTDEF}
	then
		${RM} -f ${HOSTDEF}
	fi
	echo "done."
	${RMDIR} -p ${PKG_PREFIX}/lib/X11/config 2>/dev/null || ${TRUE}
	;;

*)
	echo "Unexpected argument: ${STAGE}"
	exit 1
	;;
esac
exit 0
