if [ $# -ne 2 ]; then echo "src2nbcompat src dest"; exit 1; fi

src=$1
dest=$2

case "$src" in
/*)	;;
*)	src=`pwd`/$src ;;
esac

case "$dest" in
/*)	;;
*)	dest=`pwd`/$dest ;;
esac

echo "Preparing directory $dest"
mkdir -p $dest

echo "Copying files and directories to $dest"
cd $src
dirs=`find . -type d -print`
for d in $dirs; do
	newd=`echo $d | sed 's,^\./,,'`
	case $newd in
	*CVS)
		;;
	.)
		;;
	*)
		mkdir -p $dest/$newd
		;;
	esac
done
files=`find . \! -type d -print`
for f in $files; do
	newf=`echo $f | sed 's,^\./,,'`
	case $newf in
	*CVS/*)
		;;
	*Makefile|*Makefile.inc)
		;;
	*.[ch])
		awk '							\
			BEGIN { seen = 0 }				\
			/^\#[ 	]*include[ 	]+<[^ 	]*>/ {		\
				guard = toupper(gensub("[-/.]", "_", "g", gensub("\#[ 	]*include[ 	]+<\([^ 	]*\)>", "HAVE_\\1", "g"))); \
				if (seen == 0) {			\
					print "\#include <nbcompat.h>";	\
					print "\#if HAVE_CONFIG_H";	\
					print "\#include \"config.h\"";	\
					print "\#endif";		\
					seen = 1;			\
				};					\
				print "\#if " guard;			\
				print $0;				\
				print "\#endif";			\
				next;					\
			}						\
			{ print }					\
		' $newf > $dest/$newf
		;;
	*.[1-9])
		cp $newf $dest/$newf
		catf=`echo $newf | sed 's,\.\([1-9]\),.cat\1,'`
		nroff -mandoc $newf > $dest/$catf
		;;
	*)
		cp $newf $dest/$newf
		;;
	esac
done
