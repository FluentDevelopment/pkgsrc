# $NetBSD: INSTALL,v 1.5 2003/09/19 14:34:57 wiz Exp $

case ${STAGE} in
POST-INSTALL)
	${ECHO} "-------------------------------"
	${ECHO} "Initializing MySQL databases..."
	${ECHO} "-------------------------------"
	${PKG_PREFIX}/bin/mysql_install_db --force
	${CHOWN} -R @MYSQL_USER@:@MYSQL_GROUP@ @MYSQL_DATADIR@
	;;
esac
