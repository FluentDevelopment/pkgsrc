+/* Pth hard wrapper for nanosleep(2) [internally fully emulated] */
+#if PTH_SYSCALL_HARD
+int nanosleep(const struct timespec *rqtp, struct timespec *rmtp)
+{
+    pth_implicit_init();
+    return pth_nanosleep(rqtp, rmtp);
+}
+#endif
+
