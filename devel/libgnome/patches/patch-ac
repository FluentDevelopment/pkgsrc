+
+int
+libgnome_mkdir(const char *path, mode_t mode)
+{
+	char *tmp;
+	size_t length;
+	int ret;
+
+	length = strlen(path);
+	tmp = (char *) malloc(length + 1);
+	strcpy(tmp, path);
+	length--;
+	while (tmp[length] == '/' && length > 0) {
+		tmp[length] = '\0';
+		length--;
+	}
+	ret = mkdir(tmp, mode);
+
+	free(tmp);
+	return ret;
+}
