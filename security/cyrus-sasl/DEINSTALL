#!/bin/sh
#
# $NetBSD: DEINSTALL,v 1.3 2001/11/26 06:54:14 jlam Exp $

SASLDB=@PKG_SYSCONFDIR@/sasldb.db
PWCHECKDIR=@PWCHECKDIR@

case ${STAGE} in
POST-DEINSTALL)
	${RM} -rf ${PWCHECKDIR}
	if [ -e ${SASLDB} ]
	then
		${CAT} << EOF
===========================================================================
You may want to remove the SASL password data file:

	${SASLDB}
===========================================================================
EOF
	fi
	;;
esac
