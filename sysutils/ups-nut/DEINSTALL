#!/bin/sh
#
# $NetBSD: DEINSTALL,v 1.3 2001/11/19 04:40:00 lukem Exp $
#

PKGNAME=$1
STAGE=$2

USER="@NUT_USER@"
GROUP="@NUT_GROUP@"

CAT="@CAT@"

case ${STAGE} in
DEINSTALL)
	;;

POST-DEINSTALL)
	${CAT} << EOF
===========================================================================
If you won't be using ${PKGNAME} any longer, you may want to remove:

  * the \`${USER}' user
  * the \`${GROUP}' group
  * the \`${PKG_PREFIX}/etc/nut' directory

===========================================================================
EOF
	;;

*)
	echo "Unexpected argument: ${STAGE}"
	exit 1
	;;
esac
exit 0
