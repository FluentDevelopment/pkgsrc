#!/bin/sh
#
# $NetBSD: DEINSTALL,v 1.2 2003/08/30 20:22:54 jlam Exp $
#

PKGNAME=$1

case $2 in
POST-DEINSTALL)
	cat << EOF
=============================================================================
If you won't be using ${PKGNAME} any longer, you may want to remove the
scores and progress files that were copied to ~/.scavenger/ of every
user playing it.
=============================================================================
EOF
	;;
esac
exit 0
