#
# Rebuild the ls-R database.
#

case ${STAGE} in
POST-INSTALL)
	@MKTEXLSR@ @TEXMFDIRS@
	for map in @TEX_FONTMAPS@; do
		@UPDMAP_SYS@ --enable Map=${map}
	done
	;;
DEINSTALL)
	for map in @TEX_FONTMAPS@; do
		@UPDMAP_SYS@ --disable ${map}
	done
	;;
POST-DEINSTALL)
	@MKTEXLSR@ @TEXMFDIRS@
	;;
*)
	;;
esac
