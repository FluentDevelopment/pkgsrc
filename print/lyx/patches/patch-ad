+#ifdef __NetBSD__
+#include <machine/endian.h>
+#if BYTE_ORDER == BIG_ENDIAN
+#define BOOST_BIG_ENDIAN
+#else
+#define BOOST_LITTLE_ENDIAN
+#endif
+#else
