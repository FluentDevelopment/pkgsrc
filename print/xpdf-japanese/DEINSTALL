#!/bin/sh
#
# $NetBSD: DEINSTALL,v 1.2 2003/03/25 14:06:56 salo Exp $

PKGNAME=$1
STAGE=$2

XPDFRC=@PKG_SYSCONFDIR@/xpdfrc

case ${STAGE} in
DEINSTALL)
	;;

POST-DEINSTALL)
	@SED@ -e "/apanese/d" ${XPDFRC} > ${XPDFRC}.tmp
	@SED@ -e "/jisx0208/d" ${XPDFRC}.tmp > ${XPDFRC}
	@RM@ -f ${XPDFRC}.tmp
	;;

*)
	echo "Unexpected argument: ${STAGE}"
	exit 1
	;;
esac
exit 0
