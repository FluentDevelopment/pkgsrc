+local function get_load_sysctl()
+    local f=io.popen('sysctl -n vm.loadavg', 'r')
+    if not f then
+        return ""
+    end
+    local s=f:read('*l')
+    f:close()
+    local st, en, load=string.find(s, '^\{? ?(%d+%.%d+) %d+%.%d+ %d+%.%d+ ?\}?$')
+    return (load or "")
+end
+
+local function get_load_na()
+    return "(n/a)"
+end
