# $NetBSD: Makefile.common,v 1.2 2006/04/27 03:20:34 wulf Exp $
#
# This Makefile fragment is included at the top of package Makefiles for
# GNU Radio distributed packages (they all share common configure and build
# settings).

CATEGORIES+=	ham
MASTER_SITES?=	${MASTER_SITE_GNU:=gnuradio/}

MAINTAINER?=	wulf@NetBSD.org
HOMEPAGE?=	http://www.gnu.org/software/gnuradio/

USE_LIBTOOL=	yes
GNU_CONFIGURE=	yes
USE_TOOLS+=	gmake automake autoconf pkg-config

BUILD_DEPENDS+=doxygen>=1.4.3nb1:../../devel/doxygen

PY_PATCHPLIST=	yes
PYTHON_VERSIONS_ACCEPTED=	24 23

EGDIR=          ${PREFIX}/share/examples/gnuradio/conf.d
PKG_SYSCONFSUBDIR=gnuradio/conf.d

pre-configure:
	cd ${WRKSRC}; ./bootstrap

.include "../../mk/bsd.prefs.mk"
