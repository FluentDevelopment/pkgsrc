# $NetBSD: transform-ccc-cc,v 1.2 2006/07/31 14:43:48 jlam Exp $
#

case $arg in
######################################################################
# Directories for the runtime library search path are passed via
# "-Wl,-rpath,<dir>", not "-Wl,-R<dir>".
######################################################################
-Wl,-R*)
	arg="-Wl,-rpath,${arg#-Wl,-R}"
	debug_log $wrapperlog "   (transform-ccc-cc) to: $arg"
	addtocache=yes
	;;
-W[LlSc],*)
	addtocache=yes
	;;
-W*)
	arg=
	debug_log $wrapperlog "   (transform-ccc-cc) to: $arg"
	addtocache=yes
	;;
-mieee)
	arg="-ieee"
	debug_log $wrapperlog "	(transform-ccc-cc) to: $arg"
	addtocache=yes
	;;
-g)
	arg="-g3"
	debug_log $wrapperlog "   (transform-ccc-cc) to: $arg"
	addtocache=yes
	;;
esac
