DISTNAME=	catdoc-0.94.2
CATEGORIES=	textproc
MASTER_SITES=	http://ftp.45.free.net/pub/catdoc/

MAINTAINER=	pkgsrc-users@NetBSD.org
HOMEPAGE=	http://www.45.free.net/~vitus/software/catdoc/
